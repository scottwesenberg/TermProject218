@model TermProject1.Models.Game

@{
    ViewData["Title"] = "Create";
}

<h2>Add A New Game</h2>


<hr />
<div class="row th-bg-darkblue rounded-2 p-2">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Creator" class="control-label"></label>
                <input asp-for="Creator" class="form-control" />
                <span asp-validation-for="Creator" class="text-danger"></span>
            </div>

            @* <div class="form-group">
                <label asp-for="GameCategories" class="control-label"></label>
                <select asp-for="GameCategories" asp-items="ViewBag.CategoryList" class="form-control" multiple>
                </select>
                <span asp-validation-for="GameCategories" class="text-danger"></span>
            </div> *@ 

            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IGNRating" class="control-label"></label>
                <input asp-for="IGNRating" type="number" class="form-control" min="0" max="10" step="1" />
                <span asp-validation-for="IGNRating" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div>
                <input type="submit" value="Create" class="th-btn mt-2 rounded-3" /> 
                <input type="reset" value="Reset" class="th-btn-other mt-2 rounded-3" />
                <button type="button" class="th-btn-other text-center rounded-3 p-1 mt-2" onclick="window.location.href= '/Game/Index'">
                    Back to List
                </button>
            </div>
        </form>
    </div>

    
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
