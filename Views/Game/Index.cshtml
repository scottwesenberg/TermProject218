@model IEnumerable<TermProject1.Models.Game>

@{
    ViewData["Title"] = "Index";
}
<div class=" d-flex justify-content-center align-items-center" style="min-height: 60vh;">
    <div class="th-bg-darkblue rounded-2 p-3 " style="width: 100%;">
        <h1 class="p-2 text-center th-light">Games</h1>
        <div class=" text-end pe-5">
        <button type="button" class="th-btn-other text-center rounded-3 p-1 mt-2" onclick="window.location.href= '/Game/Create'">
            Add New Game
        </button>
        </div>
        <table class="table th-light">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Creator)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Year)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IGNRating)
                    </th>
 
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Creator)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Year)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IGNRating)
                        </td>

                        <td>
                            
                            <button class="th-btn rounded-2 p-1" onclick="window.location.href = '@Url.Action("Details", new { id = item.Id })';">
                                View Game
                            </button>
                            
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>