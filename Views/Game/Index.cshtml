@model IEnumerable<TermProject1.Models.Game>

@{
    ViewData["Title"] = "Index";
}
<div class=" d-flex justify-content-center align-items-center" style="min-height: 60vh;">
    <div class="th-bg-darkblue rounded-2 p-3 " style="width: 100%;">
        <h1 class="p-2 text-center">Games</h1>

        <p class="text-center">
            <a asp-action="Create" class="btn btn-light p-1">Add New Game</a>
        </p>
        <table class="table text-white">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Creator)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Year)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IGNRating)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Creator)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Year)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IGNRating)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class=" btn btn-light p-1">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class=" btn btn-light p-1">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class=" btn btn-light p-1">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>