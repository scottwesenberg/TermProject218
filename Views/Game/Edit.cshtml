@model TermProject1.Models.Game

@{
    ViewData["Title"] = "Edit";
}
<div class="th-bg-darkblue p-2 rounded-2">
    <h2>Edit</h2>

    <h4>Game</h4>
    <hr />
    <div class="row ">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Creator" class="control-label"></label>
                    <input asp-for="Creator" class="form-control" />
                    <span asp-validation-for="Creator" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="Year" class="control-label"></label>
                    <input asp-for="Year" class="form-control" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IGNRating" class="control-label"></label>
                    <input asp-for="IGNRating" class="form-control" />
                    <span asp-validation-for="IGNRating" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group mt-2 ">
                    <input type="submit" value="Save" class="th-btn mt-2 rounded-3" />
                    <button type="button" class="th-btn-other text-center rounded-3 p-1 mt-2" onclick="window.location.href= '/Game/Index'">
                        Back to List
                    </button>
                </div>
            </form>
        </div>
    </div>


</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
