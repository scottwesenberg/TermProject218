@model TermProject1.Models.Review

@{
    ViewData["Title"] = "Edit";
}

<div class="th-bg-darkblue rounded-2 th-div-full p-2">
    <h4>Edit Review</h4>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ReviewId" />
                <div class="form-group visually-hidden" >
                    <label asp-for="GameId" class="control-label"></label>
                    <input asp-for="GameId" class="form-control" readonly="readonly" value="@ViewBag.GameName" />
                </div>

                <div class="form-group">
                    <label asp-for="GameRating" class="control-label"></label>
                    <input asp-for="GameRating" class="form-control" />
                    <span asp-validation-for="GameRating" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GameReview" class="control-label"></label>
                    <textarea asp-for="GameReview" class="form-control" rows="4" maxlength="3000"></textarea>
                    <span asp-validation-for="GameReview" class="text-danger"></span>
                </div>
                <div class="form-group mt-2 ">
                    <input type="submit" value="Save" class="th-btn mt-2 rounded-3" />
                    <button type="button" class="th-btn-other text-center rounded-3 p-1 " onclick="window.location.href= '/Review/Index'">
                        Back to List
                    </button>
                </div>
            </form>
        </div>
    </div>


</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
