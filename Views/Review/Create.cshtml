@model TermProject1.Models.Review

@{
    ViewData["Title"] = "Create";
}


<div class="th-bg-darkblue p-2 rounded-2 overflow-auto" style="max-height:75vh;">
    <h3>Review for @ViewData["GameName"]</h3>
    <hr />
    <div class=" row " style="width:95%;">
        <div class="col-md-8" >
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                
                    <input type="hidden" asp-for="GameId" class ="form-control" asp-items=" ViewBag.Name "></input>
                </div>
                <div class="form-group">
                    <label asp-for="GameRating" class="control-label"></label>
                    <input asp-for="GameRating" type="number" min="0" max="10" step="any" class="form-control" />
                    <span asp-validation-for="GameRating" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="GameReview" class="control-label"></label>
                    <textarea asp-for="GameReview" class="form-control" rows="4" maxlength="3000"></textarea>
                    <span asp-validation-for="GameReview" class="text-danger"></span>
                </div>
                <input type="submit" value="Create" class="th-btn mt-2 rounded-3" />
                <input type="reset" value="Reset" class="th-btn-other mt-2 rounded-3" />
                <button type="button" class="th-btn text-center rounded-3 p-1 mt-2">
                    <a asp-controller="Game" asp-action="Details" asp-route-id="@Model?.GameId" class="a-cl th-dark ">Back to Game</a>
                </button>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
