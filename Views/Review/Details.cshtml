@model TermProject1.Models.Review

@{
    ViewData["Title"] = "Details";
}



<div class="th-bg-darkblue p-2 rounded-2">
    <h3>Review</h3>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Game)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Game.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GameRating)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GameRating)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GameReview)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GameReview)
        </dd>
    </dl>

    <div class="">
        <button class="th-btn rounded-2 p-1 mt-2" onclick="window.location.href = '@Url.Action("Edit", new { id = Model?.ReviewId })';">
            Edit
        </button>
        <button class="th-btn rounded-2 p-1 mt-2" onclick="window.location.href = '@Url.Action("Delete", new { id = Model?.ReviewId })';">
            Delete
        </button>

        <button type="button" class="th-btn-other text-center rounded-3 p-1 mt-2" onclick="window.location.href= '/Review/Index'">
            Back to Reviews
        </button>
    </div>
</div>