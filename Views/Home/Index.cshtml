@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex justify-content-center align-items-center text-center" style="min-height: 100vh;">
    <div class="transparent-bg rounded-15 p-3 mx-0" style="width: 80%;">
        <form class="d-flex align-items-center">
            <h4 class="col-sm-3 mx-0 text-center me-2">Search Game Reviews </h4>
            <div class="input-group">
                <input type="search" class="form-control" placeholder="Search for reviews...">
                <div class="input-group-append">
                    <span class="input-group-text">
                        <i class="fa fa-search p-2 "></i> 
                    </span>
                </div>
            </div>
        </form>
    </div>
</div>


